    "version": "0.2.0",
    "configurations": [
        {
            "name": "crawler",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd" :"/home/azureuser/ai_crawl",
            "console": "integratedTerminal",
            "args": [
                "--County", "Morris,Essex,Union,Hudson",
                "--State", "NewJersey", 
                "--Num", "10000",
                "--Config", "/home/azureuser/ai_crawl/config.env"
            ]
        },
        {
            "name": "attach crawler",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "cwd": "/root/ai_crawl",
        },
        {
            "name": "debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}